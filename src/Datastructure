src/
├── components/       # Reusable components (e.g., Form, Table, Card)
│   ├── ExpenseForm.tsx         # Form for adding expenses
│   ├── ExpenseTable.tsx        # Table for listing expenses with sorting/filtering
│   ├── ExpenseChart.tsx        # Chart to visualize expense data
├── pages/            # Full page components (Dashboard, Reports)
│   ├── Dashboard.tsx          # Main dashboard page
│   ├── Reports.tsx            # Reports page
├── hooks/            # Custom hooks (e.g., useFetch)
│   ├── useFetch.ts             # Custom hook to fetch data
├── styles/           # Global and component-specific styles
├── App.tsx           # Main component with routes
└── Main.tsx         # Entry point
